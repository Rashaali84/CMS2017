
@using CMS2017.Models
@model CMS2017.Models.Movie
@{
    ViewBag.Title = "CreateMovie";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>CreateMovie</h2>
@*m stands for model *@
@using (Html.BeginForm("AddMovie", "Movie"))
{
    <div class="form-group">
        @Html.LabelFor(m=>m.Name)
        @Html.TextAreaFor(m=>m.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(m=>m.NumberInStock)
        @Html.TextBoxFor(m=>m.NumberInStock,new{@class="form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(m=>m.ReleaseDate)
        @Html.TextBoxFor(m=>m.ReleaseDate)
    </div>
    <div class="form-group">
        @Html.DropDownListFor(m=>m.Genre,new SelectList(Model., "", ""), "", new { @class="form-control"})
    </div>

}@*it will dispose a </form> usinf and begin-form*@
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
